<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>NEST-APP</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>

</head>
<body>
  <h1>Input data relating to your favourite car:</h1>
    <form method="POST" action="/cars/car-post">
        <label for="car-brand-input">Brand</label>
        <input id="car-brand-input" name="car-brand-input" type="text">

        <label for="car-model-input">Model</label>
        <input id="car-model-input" name="car-model-input" type="text">

        <label for="car-year-input">Year</label>
        <input id="car-year-input" name="car-year-input" type="date">
        
        <label for="car-colour-input">Colour</label>
        <input id="car-colour-input" name="car-colour-input" type="color">
       
        <input id="submit-car-data" type="submit" value="Click here to submit">
      
      
    </form>
    
     
<div class="card-cont">
     @each((car, index) in carData)
    <div class="car-data-card-cont">
        <p><span class="bold">Car Brand:</span> {{car.brand}} </p> 
        <p><span class="bold">Car Model:</span>  {{car.model}} </p>
        <p><span class="bold">Car Date:</span>  {{car.date}} </p>
        <div id="colour-patch" style="background-color: {{car.colour}}" id="colour-patch"></div>  

        <div class="update-cont">
          <form method="POST" action="/cars/car-update">
          <label for="car-brand-update">Update brand</label>
          <input id="car-brand-update{{index}}" name="car-brand-update" type="text" value="{{car.brand}}">
  
          <label for="car-model-update">Update model</label>
          <input id="car-model-update{{index}}" name="car-model-update" type="text" value="{{car.model}}">
  
          <label for="car-date-update">Update date</label>
          <input id="car-date-update{{index}}" name="car-date-update" type="date" value="{{car.date}}">
  
          <label for="car-colour-update">Update Colour</label>
          <input id="car-colour-update{{index}}" name="car-colour-update" type="color" value="{{car.colour}}">

          <input  name="mongoid" type="hidden" value="{{car._id}}">

          <input type="submit" class="update-post" value="Update">
          </form>          
          </div>
          <form method="POST" action="/cars/car-delete">
          <input  name="mongoid" type="hidden" value="{{car._id}}">
          <input  type="Submit" class="delete-post" value="Delete Post">
          </form>
        </div> 
      @end
    </div>


</body>
<script type="text/javascript"  src="publicjs.js"></script>
</html>